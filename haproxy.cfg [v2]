global
    maxconn     1000
	
defaults
    mode                    tcp
    log                     global
    option                  tcplog
    retries                 3 
    timeout queue           1m
    timeout connect         4s
    timeout client          60m
    timeout server          60m
    timeout check           5s
    maxconn                 900

listen stats
    mode http
    bind *:7000
    stats enable
    stats uri /

listen primary
    bind 192.168.110.174:5000
    option httpchk OPTIONS /master
    http-check expect status 200
    default-server inter 3s fall 3 rise 2 on-marked-down shutdown-sessions
    server v1 192.168.110.171:5432 maxconn 100 check port 8008
    server v2 192.168.110.172:5432 maxconn 100 check port 8008
    server v3 192.168.110.173:5432 maxconn 100 check port 8008

listen standby
    bind 192.168.110.174:5001
    balance roundrobin
    option httpchk OPTIONS /replica
    http-check expect status 200
    default-server inter 3s fall 3 rise 2 on-marked-down shutdown-sessions
    server v1 192.168.110.171:5432 maxconn 100 check port 8008
    server v2 192.168.110.172:5432 maxconn 100 check port 8008
    server v3 192.168.110.173:5432 maxconn 100 check port 8008
